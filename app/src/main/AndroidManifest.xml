<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pandapol.arvi.uts">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Add Google Map Library -->
        <uses-library android:name="com.google.android.maps" />

        <!-- Google API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyC28UebV4N_T3axSH129DYkIbHBMzuO8yk" />

        <activity android:name="com.pandapol.arvi.uts.view.MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.pandapol.arvi.uts.view.HomeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.pandapol.arvi.uts.view.DailyActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.pandapol.arvi.uts.view.GalleryActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.pandapol.arvi.uts.view.ProfilActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.pandapol.arvi.uts.view.SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.pandapol.arvi.uts.view.WalkthroughActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.pandapol.arvi.uts.view.MusicVideoActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>